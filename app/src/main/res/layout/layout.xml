<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"

    android:layout_height="match_parent">
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TableRow>
        <TextView
            android:id="@+id/textView2"
            android:textColor="@color/purple_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="68sp"
            android:layout_marginTop="30dp"
            android:text="APRIL BONUS LLC" />
    </TableRow>



    <TableRow>


        <EditText

            android:id="@+id/taxableIncome"
            android:layout_width="394dp"
            android:layout_height="58dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter Total Income"
            android:inputType="text" />


    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/stanardDeduction"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:text="Your Standard Deduction : " />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:text="Choose Your Filing Status : " />

    </TableRow>

    <TableRow>
        <Spinner
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:id="@+id/status"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1" />


    </TableRow>
    <TableRow>
        <Spinner
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:id="@+id/yearspinner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

    </TableRow>
   <!-- <TableRow>
        <Spinner
            android:id="@+id/fillingstatusspinner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

    </TableRow>  -->

    <TableRow
        android:layout_width="362dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="125dp"
            android:layout_marginTop="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:layout_weight="0"
            android:background="@drawable/custom_button"
            android:text="Calculate" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/resultText"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp"
            android:layout_weight="0"
            android:text="" />

    </TableRow>



</TableLayout>






</LinearLayout>